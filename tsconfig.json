{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "module": "CommonJS",
    "target": "es2017",
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "./src/components/*"
      ],
      "@/utils": [
        "./src/utils/index.ts"
      ],
      "@/hooks": [
        "./src/hooks/index.ts"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/constants/*": [
        "./src/constants/*"
      ],
      "@/store": [
        "./src/store/index.ts"
      ],
      "@/services": [
        "./src/services/index.ts"
      ],
      "@/package": [
        "./package.json"
      ],
      "@/project": [
        "./project.config.json"
      ]
    }
  },
  "exclude": [
    "node_modules/*",
    "dist/*",
    "src/components/**/__tests__/*",
    "src/app.config.ts",
    "src/__tests__/*"
  ],
  "include": [
    "types",
    "src/**/*",
    "./global.d.ts",
    "src/hooks"
  ],
  "compileOnSave": false
}
